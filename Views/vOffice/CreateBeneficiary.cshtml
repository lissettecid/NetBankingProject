@model NetBanking.Models.tblFavoriteAcc

@{
    ViewBag.Title = "CreateBeneficiary";
    Layout = "~/Views/Shared/_LayoutvOffice.cshtml";
}

<h2>Agregar una cuenta</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h5>Agregue una cuenta como su favorita para agilizar transferencias</h5>
        <hr />
        <h6>@ViewBag.TitleErr</h6>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Alias o Nombre del beneficiario:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BeneficiaryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BeneficiaryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Número de cuenta del beneficiario:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AccBeneficiary, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AccBeneficiary, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Correo electrónico del beneficiario:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BeneficiaryEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BeneficiaryEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Lista de beneficiarios", "Index")
</div>
