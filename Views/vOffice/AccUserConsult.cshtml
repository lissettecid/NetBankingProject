@using Microsoft.AspNet.Identity
@model IEnumerable<NetBanking.Models.tblAccounts>

@{
    ViewBag.Title = "AccUserConsult";
    Layout = "~/Views/Shared/_LayoutvOffice.cshtml";
}

@*<h1>Hola</h1>*@
<img src="~/Image/Bancoman-escala2.png" width="300" />
<hr />
@ViewBag.Actualizar
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Mis cuentas
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <label>Cuenta</label>
                        </th>
                        <th>
                            <label>Balance Actual</label>
                        </th>
                        <th>
                            <label>Balance Disponible</label>
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Accountnumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Actual_Balance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Disponible_Balance)
                            </td>
                            <td>
                                <a href="@Url.Action("AccDetails", "vOffice", new { id = item.Id })">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

