@model NetBanking.Models.NetBankingUserRequest

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<h2>Solicitud de usuario</h2>


@using (Html.BeginForm()) 
