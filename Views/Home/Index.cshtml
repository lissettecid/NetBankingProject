@{
    ViewBag.Title = "Home Page";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>NetBanking - Bancoman</title>
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Scripts/HomeNetBanking/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">
                Oficina Virtual
                @*@if (Request.IsAuthenticated)
                    {
                        <label>Bienvenido cliente!</label>
                    }
                    else
                    {
                        <label>Inicie sesión</label>
                    }*@
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">Sobre nosotros</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#projects">Servicios</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#signup">Cont&aacute;ctanos</a></li>
                    <li class="nav-item">@Html.ActionLink("Solicitud de usuario", "Create", "NetBankingUserRequests", routeValues: null, htmlAttributes: new { @class = "nav-link js-scroll-trigger" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Home-->
    <header class="masthead">
        <div class="container d-flex h-100 align-items-center">
            <div class="mx-auto text-center">
                <h1 class="mx-auto my-0 text-uppercase">Bancoman</h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">Esta es tu oficina virtual</h2>
                @Html.ActionLink("Accede", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-primary js-scroll-trigger" })
            </div>
        </div>
    </header>
    <!-- Sobre nosotros -->
    <section class="about-section text-center" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2 class="text-white mb-4">Nuestra historia</h2>
                    <p class="text-white-50">
                        <span style="color:yellow">
                            Bancoman surge del deseo de brindar a nuestros clientes una lugar seguro en el que puedan depositar su confianza. Queremos ser como una familia que vela
                            por tus proyectos y deseos más preciados y te ayuda a hacerlos realidad. Defendemos tus finanzas, impulsamos tus sueños.
                        </span>
                    </p>
                </div>
            </div>
            <img class="img-fluid" src="assets/img/ipad.png" alt="" />
        </div>
    </section>
    <!-- Servicios-->
    <section class="projects-section bg-light" id="projects">
        <div class="container">
            <!-- Featured Project Row-->
            <div class="row align-items-center no-gutters mb-4 mb-lg-5">
                <div class="col-xl-8 col-lg-7"><img class="img-fluid mb-3 mb-lg-0" src="assets/img/bg-masthead.jpg" alt="" /></div>
                <div class="col-xl-4 col-lg-5">
                    <div class="featured-text text-center text-lg-left">
                        <h4>Préstamos</h4>
                        <p class="text-black-50 mb-0">Con nuestros pr&eacute;stamos impulsa tu meta a un siguiente nivel.</p>
                    </div>
                </div>
            </div>
            <!-- Project One Row-->
            <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
                <div class="col-lg-6"><img class="img-fluid" src="assets/img/demo-image-01.jpg" alt="" /></div>
                <div class="col-lg-6">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-left">
                                <h4 class="text-white">Ahorros</h4>
                                <p class="mb-0 text-white-50">Con nuestra cuenta de ahorros te ayudamos a prepararte para el futuro que te espera.</p>
                                <hr class="d-none d-lg-block mb-0 ml-0" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Project Two Row-->
            <div class="row justify-content-center no-gutters">
                <div class="col-lg-6"><img class="img-fluid" src="assets/img/demo-image-02.jpg" alt="" /></div>
                <div class="col-lg-6 order-lg-first">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-right">
                                <h4 class="text-white">Créditos</h4>
                                <p class="mb-0 text-white-50">Descubre los beneficios que tienes al utilizar nuestra tarjeta de crédito.</p>
                                <hr class="d-none d-lg-block mb-0 mr-0" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Signup-->
    @*<section class="signup-section" id="signup">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 col-lg-8 mx-auto text-center">
